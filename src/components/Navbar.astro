---
const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Explorar', href: '/' },
  { name: 'Contacto', href: '/' },
];
---
<nav class="w-full fixed top-0 z-50 bg-[#8d322c]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="text-xl font-bold text-white">YUMMI</div>
      <div class="hidden md:flex space-x-4">
        {navItems.map(item => (
          <a href={item.href} class="text-white hover:font-semibold transition-colors">
            {item.name}
          </a>
        ))}
      </div>
      <div class="md:hidden">
        <button id="menu-toggle" class="text-white focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  <div id="mobile-menu" class="hidden md:hidden px-4 pb-4 space-y-2">
    {navItems.map(item => (
      <a href={item.href} class="block text-white hover:font-semibold transition-colors">
        {item.name}
      </a>
    ))}
  </div>
  <script is:inline>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</nav>